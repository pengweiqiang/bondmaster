<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="8dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp">

    <ImageView
        android:id="@+id/iv_company_logo"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@color/colorBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/iv_company_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="8月8号，全国首单旅游类负全国首单旅游类负少的我玩任务少的我玩任务全国首单旅游类负少的我玩任务全国首单旅游类负少的我玩任务全国首单旅游类负少的我玩任务"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:text="2017-08-25"
            android:textColor="#b2b2b2"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>