<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >

    <com.huake.bondmaster.widget.ActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_change_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_update_mobile"
            android:drawablePadding="26dp"
            android:gravity="center_vertical"
            android:text="换绑手机号"
            android:textColor="#333333"
            android:drawableRight="@mipmap/ic_my_function_right_in"
            android:background="@drawable/set_up_style"
            android:padding="20dp"
            android:textSize="@dimen/action_bar_left_size"

            />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/my_common_text_size"
            android:text="123**12312"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_password_manage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_password_lock"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="密码管理"
        android:textColor="#333333"
        android:drawableRight="@mipmap/ic_my_function_right_in"
        android:background="@drawable/set_up_style"
        android:padding="20dp"
        android:textSize="@dimen/action_bar_left_size"
        android:layout_marginTop="1dp"
        />
    
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn"
        android:text="安全退出"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/action_bar_left_size"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


</LinearLayout>